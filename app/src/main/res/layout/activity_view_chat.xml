<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsappback2"
    tools:context=".view_chat">

    <ListView
        android:id="@+id/li"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="8dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="301dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="19dp"
        android:paddingLeft="10dp"
        android:background="@drawable/roundededittext"
        android:ems="10"
        android:hint="Message"
        android:imeOptions="actionSend|flagNoEnterAction"
        android:inputType="textShortMessage|textCapSentences|textMultiLine|textAutoComplete"
        android:maxLength="2000"
        android:maxLines="4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/li" />

    <ImageView
        android:id="@+id/button3"
        android:layout_width="92dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:text="Send"
        android:textColor="@color/white"
        android:textColorHighlight="#322929"

        android:textColorLink="#39452C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editTextText7"
        app:layout_constraintTop_toBottomOf="@+id/li"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/whatsappsend" />
</androidx.constraintlayout.widget.ConstraintLayout>