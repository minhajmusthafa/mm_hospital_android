<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bubble shape -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#202C33" /> <!-- Background color -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Tail shape -->
    <item
        android:left="0dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid android:color="#202C33" /> <!-- Background color -->
                <corners android:radius="4dp" /> <!-- Tail corner radius -->
            </shape>
        </rotate>
    </item>

</layer-list>
